{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const typeSelect = document.getElementById('typeCongeFilter');
            const congesContainer = document.getElementById('congesContainer');

            typeSelect.addEventListener('change', function() {
                const selectedType = this.value;
                
                // Show loading state with scale and fade effect
                congesContainer.style.opacity = '0.5';
                congesContainer.style.transform = 'scale(0.98)';
                congesContainer.style.transition = 'all 0.3s ease';

                // Make AJAX request
                fetch(`{{ path('app_conge_search') }}?type=${encodeURIComponent(selectedType)}`)
                    .then(response => response.text())
                    .then(html => {
                        congesContainer.innerHTML = html;
                        // Restore with animation
                        requestAnimationFrame(() => {
                            congesContainer.style.opacity = '1';
                            congesContainer.style.transform = 'scale(1)';
                        });
                        
                        // Reinitialize Bootstrap modals
                        const modals = document.querySelectorAll('.modal');
                        modals.forEach(modal => {
                            new bootstrap.Modal(modal);
                        });
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        congesContainer.style.opacity = '1';
                        congesContainer.style.transform = 'scale(1)';
                    });
            });
        });
    </script>
{% endblock %}
