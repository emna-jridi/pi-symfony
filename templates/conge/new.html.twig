{% extends 'base.html.twig' %}

{% block title %}Nouveau Congé{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        :root {
            --primary-color: #1a5276;
            --primary-light: #2980b9;
            --primary-dark: #154360;
            --primary-gradient: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
            --secondary-gradient: linear-gradient(135deg, #f5f7fa 0%, #e3e8ed 100%);
            --card-shadow: 0 10px 20px rgba(26, 82, 118, 0.1);
            --hover-shadow: 0 20px 40px rgba(26, 82, 118, 0.15);
            --transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        }

        body {
            background: #f8f9fa;
            background-image: 
                radial-gradient(circle at 100% 0%, rgba(26, 82, 118, 0.03) 0%, transparent 50%),
                radial-gradient(circle at 0% 100%, rgba(26, 82, 118, 0.03) 0%, transparent 50%);
            min-height: 100vh;
        }

        .page-title {
            font-size: 2.5rem;
            font-weight: 800;
            color: var(--primary-color);
            margin-bottom: 2rem;
            text-align: center;
            position: relative;
            text-shadow: 2px 2px 4px rgba(26, 82, 118, 0.1);
        }

        .page-title::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 100px;
            height: 4px;
            background: var(--primary-gradient);
            border-radius: 2px;
        }

        .new-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 2rem;
        }

        .card {
            background: white;
            border: none;
            border-radius: 20px;
            box-shadow: var(--card-shadow);
            transition: var(--transition);
            overflow: hidden;
        }

        .card:hover {
            box-shadow: var(--hover-shadow);
        }

        .card-header {
            background: var(--primary-gradient);
            color: white;
            padding: 1.5rem;
            border-bottom: none;
        }

        .card-header h4 {
            margin: 0;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .card-body {
            padding: 2rem;
        }

        .form-label {
            color: var(--primary-dark);
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .form-control {
            border-radius: 10px;
            border: 2px solid #e3e8ed;
            padding: 0.75rem 1rem;
            transition: var(--transition);
        }

        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.2rem rgba(26, 82, 118, 0.15);
        }

        .btn-group {
            display: flex;
            gap: 1rem;
            margin-top: 2rem;
        }

        .btn {
            padding: 0.75rem 1.5rem;
            border-radius: 10px;
            font-weight: 600;
            transition: var(--transition);
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-primary {
            background: var(--primary-gradient);
            border: none;
            color: white;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 15px rgba(26, 82, 118, 0.2);
        }

        .btn-outline-secondary {
            border: 2px solid #e3e8ed;
            color: var(--primary-dark);
            background: white;
        }

        .btn-outline-secondary:hover {
            background: var(--secondary-gradient);
            border-color: var(--primary-dark);
            transform: translateY(-2px);
        }

        .alert {
            border-radius: 10px;
            border: none;
            padding: 1rem;
            margin-bottom: 1.5rem;
        }

        .alert-danger {
            background: #fff5f5;
            color: #dc3545;
        }

        .alert-success {
            background: #f0fff4;
            color: #28a745;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="new-container">
         <h1 class="page-title">✨ Nouveau Congé</h1>

       
            
            <div class="card-body">
                {{ include('conge/_form.html.twig') }}

                <div class="btn-group">
                    <a href="{{ path('app_conge_index') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Retour à la liste
                    </a>
                </div>
            </div>
        
    </div>
{% endblock %}
