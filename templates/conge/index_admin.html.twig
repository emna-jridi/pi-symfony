{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Debounce function to delay the search request
        function debounce(func, wait) {
            let timeout;
            return function (...args) {
                clearTimeout(timeout);
                timeout = setTimeout(() => func.apply(this, args), wait);
            };
        }

        // Function to perform the search
        const performSearch = debounce(function (searchQuery) {
            fetch(`/conge/search?type=${encodeURIComponent(searchQuery)}`, {
                headers: { 
                    "X-Requested-With": "XMLHttpRequest",
                    "Accept": "application/json"
                }
            })
                .then(response => {
                    if (!response.ok) {
                        throw new Error(`HTTP error! Status: ${response.status}`);
                    }
                    return response.json();
                })
                .then(data => {
                    let congesContainer = document.getElementById("conges-container");
                    congesContainer.innerHTML = ""; // Clear current results

                    if (data.error) {
                        congesContainer.innerHTML = `
                            <div class="col-12">
                                <div class="alert alert-danger text-center rounded-pill">
                                    <i class="fas fa-exclamation-circle me-2"></i>
                                    Erreur: ${data.error}
                                </div>
                            </div>
                        `;
                        return;
                    }

                    if (data.conges && data.conges.length > 0) {
                        data.conges.forEach(conge => {
                            let congeHTML = `
                                <div class="col-md-6 col-lg-4">
                                    <div class="card conge-card">
                                        <div class="card-header">
                                            <i class="fas fa-calendar-check"></i>
                                            <span>Demande #${conge.id}</span>
                                        </div>
                                        <div class="card-body">
                                            <p><strong>üìù Type :</strong> ${conge.TypeConge}</p>
                                            <p><strong>üìÜ D√©but :</strong> ${conge.DateDebut || 'N/A'}</p>
                                            <p><strong>üìÖ Fin :</strong> ${conge.DateFin || 'N/A'}</p>
                                            <p><strong>üö¶ Statut :</strong>
                                                <span class="status-badge status-${conge.Status.replace(' ', '\\ ')}">
                                                    ${conge.Status}
                                                </span>
                                            </p>
                                            <div class="btn-action-group">
                                                <button class="btn btn-view" data-bs-toggle="modal" data-bs-target="#modalConge${conge.id}" title="Voir les d√©tails">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                                <a href="/conge/${conge.id}/edit/admin" class="btn btn-edit" title="Modifier">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- Modal for details -->
                                <div class="modal fade" id="modalConge${conge.id}" tabindex="-1" aria-labelledby="modalCongeLabel${conge.id}" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered modal-lg">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="modalCongeLabel${conge.id}">
                                                    <i class="fas fa-file-alt me-2"></i>
                                                    D√©tail de la Demande #${conge.id}
                                                </h5>
                                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <ul class="list-group list-group-flush">
                                                    <li class="list-group-item"><strong>üìù Type :</strong> ${conge.TypeConge}</li>
                                                    <li class="list-group-item"><strong>üìÜ Date d√©but :</strong> ${conge.DateDebut || 'N/A'}</li>
                                                    <li class="list-group-item"><strong>üìÖ Date fin :</strong> ${conge.DateFin || 'N/A'}</li>
                                                    <li class="list-group-item"><strong>üö¶ Statut :</strong>
                                                        <span class="status-badge status-${conge.Status.replace(' ', '\\ ')}">
                                                            ${conge.Status}
                                                        </span>
                                                    </li>
                                                    <li class="list-group-item"><strong>üë§ Utilisateur :</strong>
                                                        ${conge.user ? conge.user.nomUser + ' ' + conge.user.prenomUser : '<em>Aucun utilisateur associ√©</em>'}
                                                    </li>
                                                </ul>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                    <i class="fas fa-times me-2"></i>Fermer
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            `;
                            congesContainer.innerHTML += congeHTML;
                        });
                    } else {
                        congesContainer.innerHTML = `
                            <div class="col-12">
                                <div class="alert alert-warning text-center rounded-pill">
                                    <i class="fas fa-exclamation-circle me-2"></i>
                                    Aucun cong√© trouv√©.
                                </div>
                            </div>
                        `;
                    }
                })
                .catch(error => {
                    console.error("‚ùå Erreur de recherche:", error);
                    let congesContainer = document.getElementById("conges-container");
                    congesContainer.innerHTML = `
                        <div class="col-12">
                            <div class="alert alert-danger text-center rounded-pill">
                                <i class="fas fa-exclamation-circle me-2"></i>
                                Erreur lors de la recherche. Veuillez r√©essayer.
                            </div>
                        </div>
                    `;
                });
        }, 500); // 500ms delay

        // Attach the debounced search function to the input event
        document.getElementById("search-input").addEventListener("input", function () {
            let searchQuery = this.value.trim();
            performSearch(searchQuery);
        });
    </script>
{% endblock %}