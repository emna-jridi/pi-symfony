{% for conge in conges %}
    <div class="col-md-6 col-lg-4">
        <div class="card conge-card">
            <div class="card-header bg-primary text-white text-center">
                <i class="fas fa-calendar-check"></i> Demande #{{ conge.id }}
            </div>
            <div class="card-body bg-white">
                <p><strong>üìù Type :</strong> {{ conge.typeConge }}</p>
                <p><strong>üìÜ D√©but :</strong> {{ conge.dateDebut ? conge.dateDebut|date('Y-m-d') : 'N/A' }}</p>
                <p><strong>üìÖ Fin :</strong> {{ conge.dateFin ? conge.dateFin|date('Y-m-d') : 'N/A' }}</p>
                <p><strong>üö¶ Statut :</strong>
                    <span class="status-badge status-{{ conge.status|replace({' ': '\\ '}) }}">
                        {{ conge.status }}
                    </span>
                </p>
                {% if conge.getIdUser() %}
                    <p><strong>üë§ Utilisateur :</strong> {{ conge.getIdUser().getNomUser() ~ ' ' ~ conge.getIdUser().getPrenomUser() }}</p>
                {% endif %}
                <div class="d-flex justify-content-between mt-4">
                    <button class="btn btn-view" data-bs-toggle="modal" data-bs-target="#modalConge{{ conge.id }}" title="Voir les d√©tails">
                        <i class="fas fa-eye"></i>
                    </button>
                    <div class="btn-group">
                        <a href="{{ path('app_conge_edit', {'id': conge.id}) }}" class="btn btn-edit" title="Modifier">
                            <i class="fas fa-edit"></i>
                        </a>
                        <form method="post" action="{{ path('app_conge_delete', {'id': conge.id}) }}" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer ce cong√© ?');" style="display: inline;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ conge.id) }}">
                            <button class="btn btn-delete" title="Supprimer">
                                <i class="fas fa-trash"></i>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Modal for details #}
    <div class="modal fade" id="modalConge{{ conge.id }}" tabindex="-1" aria-labelledby="modalCongeLabel{{ conge.id }}" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title" id="modalCongeLabel{{ conge.id }}">üóÇÔ∏è D√©tail de la Demande #{{ conge.id }}</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><strong>üìù Type :</strong> {{ conge.typeConge }}</li>
                        <li class="list-group-item"><strong>üìÜ Date d√©but :</strong> {{ conge.dateDebut ? conge.dateDebut|date('Y-m-d') : 'N/A' }}</li>
                        <li class="list-group-item"><strong>üìÖ Date fin :</strong> {{ conge.dateFin ? conge.dateFin|date('Y-m-d') : 'N/A' }}</li>
                        <li class="list-group-item"><strong>üö¶ Statut :</strong>
                            <span class="status-badge status-{{ conge.status|replace({' ': '\\ '}) }}">
                                {{ conge.status }}
                            </span>
                        </li>
                        <li class="list-group-item"><strong>üë§ Utilisateur :</strong>
                            {% if conge.getIdUser() %}
                                {{ conge.getIdUser().getNomUser() ~ ' ' ~ conge.getIdUser().getPrenomUser() }}
                            {% else %}
                                <em>Aucun utilisateur associ√©</em>
                            {% endif %}
                        </li>
                    </ul>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary rounded-pill" data-bs-dismiss="modal">Fermer</button>
                </div>
            </div>
        </div>
    </div>
{% else %}
    <div class="col-12">
        <div class="alert alert-warning text-center rounded-pill">Aucun cong√© trouv√©.</div>
    </div>
{% endfor %}

<style>
