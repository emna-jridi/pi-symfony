{% extends 'baseAdmin1.html.twig' %}

{% block title %}Liste des Services{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4 text-primary text-center">Liste des Services</h1>

   

  
    <div class="card">
        <div class="card-body">


        {# Ajouter un lien pour ajouter un nouveau service #}
<div class="text-center mt-4">
    <a href="{{ path('add_s') }}" class="btn btn-primary mb-3"> ‚ûï Ajouter un nouveau service</a>
</div>
           

            {# Tableau des services #}

            
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Nom du Service</th>
                        <th>Type</th>
                        <th>Date D√©but</th>
                        <th>Date Fin</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for service in services %}
                        <tr>
                            <td>{{ service.NomService }}</td>
                            <td>{{ service.TypeService }}</td>
                            <td>{{ service.DateDebutService|date('d/m/Y') }}</td>
                            <td>{{ service.DateFinService|date('d/m/Y') }}</td>
                            <td>
                                        {% if service.StatusService == 'Actif' %}
                                            <span class="badge bg-success">Actif</span>
                                        {% else %}
                                            <span class="badge bg-warning">Inactif</span>
                                        {% endif %}
                                    </td>
                            <td>
                                {# Lien pour afficher les d√©tails du service #}
                                <a href="{{ path('service_show', {'idService': service.idService}) }}" class="btn btn-info btn-sm">üëÄ Voir</a>

                                {# Lien pour √©diter le service #}
                                <a href="{{ path('service_edit', {'idService': service.idService}) }}" class="btn btn-warning btn-sm">‚úèÔ∏è Modifier</a>



                                <a href="{{ path('service_delete', {'idService': service.idService}) }}" class="btn btn-danger btn-sm" onclick="return confirm('√ätes-vous s√ªr de vouloir supprimer ce contrat ?')">üóëÔ∏è Supprimer</a>

                                
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7" class="text-center">Aucun service disponible</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

             
        </div>
    </div>
</div>
{% endblock %}
