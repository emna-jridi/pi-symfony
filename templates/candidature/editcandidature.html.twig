{% extends 'base.html.twig' %}

{% block title %}Modifier une candidature{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">

            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h1 class="h4 mb-0">Modifier la candidature</h1>
                </div>
                
                <div class="card-body">
                    {{ form_start(form, {
                        'attr': {
                            'novalidate': 'novalidate',
                            'class': 'needs-validation'
                        }
                    }) }}

                    {{ form_errors(form) }}

                    <div class="row g-3">

                        <div class="col-12">
                            {{ form_row(form.nom, {
                                'label': 'Nom du candidat',
                                'attr': {'class': 'form-control'},
                                'row_attr': {'class': 'mb-3'}
                            }) }}
                        </div>

                        <div class="col-12">
                            {{ form_row(form.prenom, {
                                'label': 'Prénom',
                                'attr': {'class': 'form-control'},
                                'row_attr': {'class': 'mb-3'}
                            }) }}
                        </div>

                        <div class="col-12">
                            {{ form_row(form.email, {
                                'label': 'Email',
                                'attr': {'class': 'form-control'},
                                'row_attr': {'class': 'mb-3'}
                            }) }}
                        </div>
                            <div class="col-12">
                            {{ form_row(form.telephone, {
                                'label': 'Téléphone',
                                'attr': {'class': 'form-control'},
                                'row_attr': {'class': 'mb-3'}
                            }) }}
                        </div>

                     {#    <div class="col-12">
                            {{ form_row(form.cvUrl, {
                                'label': 'Lien du CV',
                                'attr': {'class': 'form-control'},
                                'row_attr': {'class': 'mb-3'}
                            }) }}
                        </div> #}
                        <div class="col-12 mb-3">
    {% if candidature.cvUrl %}
        <div class="mb-2">
            <label class="form-label">CV actuel</label>
            <div class="d-flex align-items-center">
                <span class="me-2">{{ candidature.cvUrl }}</span>
                <a href="{{ asset('uploads/cv/' ~ candidature.cvUrl) }}" class="btn btn-sm btn-outline-primary" target="_blank">
                    <i class="fas fa-eye"></i> Voir
                </a>
            </div>
        </div>
    {% endif %}
    
    {{ form_label(form.cvFile, 'Télécharger un nouveau CV', {'label_attr': {'class': 'form-label'}}) }}
    {{ form_widget(form.cvFile, {'attr': {'class': 'form-control' ~ (form.cvFile.vars.errors|length ? ' is-invalid' : '')}}) }}
    <div class="invalid-feedback">
        {{ form_errors(form.cvFile) }}
    </div>
    <small class="form-text text-muted">Format PDF uniquement, taille maximale: 2MB. Laissez vide pour conserver le CV actuel.</small>
</div>

                     {#    <div class="col-12">
                            {{ form_row(form.lettreMotivation, {
                                'label': 'Lettre de motivation',
                                'attr': {'class': 'form-control', 'rows': 4},
                                'row_attr': {'class': 'mb-3'}
                            }) }}
                        </div> #}
                        <div class="col-12 mb-3">
    {% if candidature.lettreMotivation %}
        <div class="mb-2">
            <label class="form-label">Lettre de motivation actuelle</label>
            <div class="d-flex align-items-center">
                <span class="me-2">{{ candidature.lettreMotivation }}</span>
                <a href="{{ asset('uploads/motivation/' ~ candidature.lettreMotivation) }}" class="btn btn-sm btn-outline-primary" target="_blank">
                    <i class="fas fa-eye"></i> Voir
                </a>
            </div>
        </div>
    {% endif %}
    
    {{ form_label(form.lettreMotivationFile, 'Télécharger une nouvelle lettre de motivation', {'label_attr': {'class': 'form-label'}}) }}
    {{ form_widget(form.lettreMotivationFile, {'attr': {'class': 'form-control' ~ (form.lettreMotivationFile.vars.errors|length ? ' is-invalid' : '')}}) }}
    <div class="invalid-feedback">
        {{ form_errors(form.lettreMotivationFile) }}
    </div>
    <small class="form-text text-muted">Format PDF uniquement, taille maximale: 2MB. Laissez vide pour conserver la lettre actuelle.</small>
</div>

                        {# Offre liée (si modifiable dans le formulaire) #}
                        <div class="col-12">
                            {{ form_row(form.offre, {
                                'label': 'Offre liée',
                                'attr': {'class': 'form-select'},
                                'row_attr': {'class': 'mb-3'}
                            }) }}
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a href="{{ path('list_candidatures') }}" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i> Retour à la liste
                        </a>
                        <button type="submit" class="btn btn-primary px-4">
                            <i class="fas fa-save me-2"></i> Enregistrer
                        </button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
