{% extends 'baseAdmin1.html.twig' %}

{% block title %}Liste des contrats{% endblock %}

{% block body %}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h1 class="mb-4 text-primary text-center">Liste des Contrats des clients</h1>


            <div class="text-center mt-4">
                <a href="{{ path('add_c') }}" class="btn btn-primary mb-3">
                    ‚ûï Ajouter un nouveau contrat
                </a>
            </div>
           

            {% if contrats is not empty %}
                <div class="table-responsive">
                    <table class="table table-hover table-bordered text-center align-middle">
                        <thead>
                            <tr>
                             
                                <th>Nom du client</th>
                                <th>Email</th>
                                <th>T√©l√©phone</th>
                                <th>Date de d√©but</th>
                                <th>Date de fin</th>
                                <th>Montant</th>
                                <th>Status du contrat</th>
                                <th>Mode de paiement</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for contrat in contrats %}
                                <tr>
                                  
                                    <td>{{ contrat.NomClient }}</td>
                                    <td>{{ contrat.EmailClient }}</td>
                                    <td>{{ contrat.telephoneClient }}</td>
                                    <td>{{ contrat.DateDebutContrat|date('d-m-Y') }}</td>
                                    <td>{{ contrat.DateFinContrat|date('d-m-Y') }}</td>
                                    <td class="text-success"><strong>{{ contrat.MontantContrat }} DT</strong></td>
                                    <td>
                                        {% if contrat.StatusContrat == 'Actif' %}
                                            <span class="badge bg-success">Actif</span>
                                        {% else %}
                                            <span class="badge bg-warning">Inactif</span>
                                        {% endif %}
                                    </td>
                                    <td>{{ contrat.modePaiement ? contrat.modePaiement.value : '-' }}</td>
                                    <td>
                                        <a href="{{ path('contratt_show', {'idContrat': contrat.idContrat}) }}" class="btn btn-info btn-sm">üëÄ Voir</a>
                                        <a href="{{ path('contratt_edit', {'idContrat': contrat.idContrat}) }}" class="btn btn-warning btn-sm">‚úèÔ∏è Modifier</a>
                                        <a href="{{ path('contratt_delete', {'idContrat': contrat.idContrat}) }}" class="btn btn-danger btn-sm" onclick="return confirm('√ätes-vous s√ªr de vouloir supprimer ce contrat ?')">üóëÔ∏è Supprimer</a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="alert alert-warning text-center">
                    Aucun contrat trouv√©. üìÑ
                </div>
            {% endif %}

            
        </div>
    </div>
</div>
{% endblock %}
