<tbody>
    {% for contrat in contrats %}
        <tr>
            <td>{{ contrat.NomClient }}</td>
            <td>{{ contrat.EmailClient }}</td>
            <td>{{ contrat.telephoneClient }}</td>
            <td>{{ contrat.DateDebutContrat|date('d-m-Y') }}</td>
            <td>{{ contrat.DateFinContrat|date('d-m-Y') }}</td>
            <td class="text-success"><strong>{{ contrat.MontantContrat }} DT</strong></td>
            <td>
                {% if contrat.StatusContrat == 'Actif' %}
                    <span class="badge bg-success">Actif</span>
                {% else %}
                    <span class="badge bg-warning">Inactif</span>
                {% endif %}
            </td>
            <td>{{ contrat.modePaiement ? contrat.modePaiement.value : '-' }}</td>
            <td>
                <a href="{{ path('contratt_show', {'idContrat': contrat.idContrat}) }}" class="btn btn-info btn-sm">👀 Voir</a>
                <a href="{{ path('contratt_edit', {'idContrat': contrat.idContrat}) }}" class="btn btn-warning btn-sm">✏️ Modifier</a>
                <a href="{{ path('contratt_delete', {'idContrat': contrat.idContrat}) }}" class="btn btn-danger btn-sm" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce contrat ?')">🗑️ Supprimer</a>
            </td>
        </tr>
    {% else %}
        <tr><td colspan="9">Aucun contrat trouvé.</td></tr>
    {% endfor %}
</tbody>
