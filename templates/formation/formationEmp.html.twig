{% extends 'base1.html.twig' %}

{% block title %}Formations pour l'Employé{% endblock %}

{% block body %}
<div class="col-lg-12 grid-margin stretch-card">
  <div class="card">
    <div class="card-body">
      <h4 class="card-title">Formations Disponibles</h4>
      
      {% if formations|length > 0 %}
      <div class="row">
        {% for formation in formations %}
        <div class="col-md-4 mb-4">
          <!-- Use the lien_formation field for the href -->
          <a href="{{ formation.lienFormation }}" class="card shadow-sm h-100 border-0 text-decoration-none" target="_blank">
            <div class="card-header text-white" style="background-color: #4B49AC;">
              <h5 class="card-title mb-0" style="color: white !important;">{{ formation.NomFormation }}</h5>
            </div>
            <div class="card-body d-flex flex-column">
              <div class="mb-2">
                <span class="badge text-white" style="background-color: #17a2b8;">{{ formation.ThemeFormation }}</span>
                <span class="badge text-white ml-2" style="background-color: #6c757d;">{{ formation.niveauDifficulte }}</span>
              </div>
              <p class="card-text flex-grow-1">
                {% if formation.description|length > 120 %}
                {{ formation.description|slice(0, 120)|raw }}...
                {% else %}
                {{ formation.description|raw }}
                {% endif %}
              </p>
              <div class="mt-auto">
                <div class="d-flex justify-content-between align-items-center">
                  <div><i class="ti-calendar" style="color: #4B49AC;"></i> {{ formation.date ? formation.date|date('d/m/Y') : 'Non planifiée' }}</div>
                  <div><i class="ti-timer" style="color: #4B49AC;"></i> {{ formation.duree }} jour{% if formation.duree > 1 %}s{% endif %}</div>
                </div>
              </div>
            </div>
          </a>
        </div>
        {% endfor %}
      </div>
      {% else %}
      <div class="row">
        <div class="col-12">
          <div class="alert alert-info text-center">
            <i class="ti-info-alt mr-2"></i> Aucune formation disponible pour le moment.
          </div>
        </div>
      </div>
      {% endif %}
    </div>
  </div>
</div>
{% endblock %}
