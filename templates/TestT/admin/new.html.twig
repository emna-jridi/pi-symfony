{% extends 'baseAdmin1.html.twig' %}

{% block title %}Nouveau Test{% endblock %}

{% block body %}
<div class="col-lg-12 grid-margin stretch-card">
  <div class="card shadow-sm">
    <div class="card-body">

      <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="card-title">Créer un nouveau test</h4>
        <a href="{{ path('app_admin_test_index') }}" class="btn btn-outline-secondary">
          <i class="bi bi-arrow-left-circle"></i> Retour
        </a>
      </div>

      {{ form_start(form, {'attr': {'class': 'forms-sample', 'novalidate': 'novalidate'}}) }}

        <div class="row">
          <div class="col-md-6 mb-3">
            {{ form_label(form.titre, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
            {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
            <div class="text-danger">{{ form_errors(form.titre) }}</div>
          </div>

          <div class="col-md-6 mb-3">
            {{ form_label(form.dureeMinutes, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
            <div class="input-group">
              {{ form_widget(form.dureeMinutes, {'attr': {'class': 'form-control', 'min': '1'}}) }}
              <span class="input-group-text">minutes</span>
            </div>
            <div class="text-danger">{{ form_errors(form.dureeMinutes) }}</div>
          </div>
        </div>

        <div class="mb-3">
          {{ form_label(form.description, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
          {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': '4'}}) }}
          <div class="text-danger">{{ form_errors(form.description) }}</div>
        </div>

        <div class="form-group mb-3">
          <label class="fw-bold">{{ form_label(form.questions) }}</label>
          <div class="border p-3 rounded bg-light">
            <p class="small text-muted mb-3">Sélectionnez les questions à inclure dans ce test :</p>
            <div class="row">
              {% for questionField in form.questions %}
                <div class="col-md-6 mb-2">
                  <div class="form-check">
                    {{ form_widget(questionField, {'attr': {'class': 'form-check-input'}}) }}
                    {{ form_label(questionField, null, {'label_attr': {'class': 'form-check-label'}}) }}
                  </div>
                </div>
              {% endfor %}
            </div>
          </div>
          <div class="text-danger mt-2">{{ form_errors(form.questions) }}</div>
        </div>

        <div class="d-flex justify-content-end">
          <button type="submit" class="btn btn-success me-2">
            <i class="bi bi-check-circle"></i> Enregistrer
          </button>
          <a href="{{ path('app_admin_test_index') }}" class="btn btn-light">Annuler</a>
        </div>

      {{ form_end(form) }}

    </div>
  </div>
</div>
{% endblock %}
