{% extends 'base1.html.twig' %}

{% block title %}Passer le Test{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>{{ test.titre }} - Passer le Test</h1>
    
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Instructions</h5>
            <p>{{ test.description }}</p>
            
            <form method="POST">
                {% for question in questions %}
                    <div class="mb-3">
                        <label for="question_{{ question.id }}" class="form-label">{{ question.question }}</label>
                        
                        {% for option in question.options %}
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="answers[{{ question.id }}]" id="question_{{ question.id }}_{{ loop.index }}" value="{{ option }}" required>
                                <label class="form-check-label" for="question_{{ question.id }}_{{ loop.index }}">
                                    {{ option }}
                                </label>
                            </div>
                        {% endfor %}
                    </div>
                {% endfor %}
                <button type="submit" class="btn btn-primary">Soumettre le test</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
