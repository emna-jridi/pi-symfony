{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap');
        
        body {
            margin: 0;
            padding: 0;
            font-family: 'Poppins', sans-serif;
            background: #f8f9fa;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
        }
        
        .register-container {
            display: flex;
            width: 900px;
            height: auto;
            background: white;
            border-radius: 15px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }
        
        .register-image {
            color: white;
            flex: 1;
            background: linear-gradient(135deg, #0e53ab 0%, #0a3d7a 100%);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 30px;
            position: relative;
            overflow: hidden;
        }
        
        .register-image::before {
            color: white;
            content: '';
            position: absolute;
            width: 200%;
            height: 200%;
            background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" viewBox="0 0 100 100"><rect width="100" height="100" fill="none"/><circle cx="50" cy="50" r="40" stroke="rgba(255,255,255,0.1)" stroke-width="2" fill="none"/></svg>');
            opacity: 0.1;
            animation: rotate 30s linear infinite;
        }
        
        @keyframes rotate {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        
        .register-image h2 {
            color: white;
            font-size: 24px;
            font-weight: 600;
            margin-bottom: 10px;
            text-align: center;
            position: relative;
            z-index: 1;
        }
        
        .register-image p {
            color: rgba(255, 255, 255, 0.8);
            font-size: 14px;
            line-height: 1.5;
            text-align: center;
            position: relative;
            z-index: 1;
        }
        
        .register-form {
            flex: 1;
            padding: 30px;
            display: flex;
            flex-direction: column;
        }
        
        .register-form h1 {
            color: #0e53ab;
            font-size: 24px;
            font-weight: 700;
            margin-bottom: 5px;
        }
        
        .register-form p {
            color: #6c757d;
            font-size: 13px;
            margin-bottom: 20px;
        }
        
        .form-group {
            position: relative;
            margin-bottom: 15px;
        }
        
        .form-group label {
            display: block;
            margin-bottom: 5px;
            color: #495057;
            font-size: 13px;
            font-weight: 500;
        }
        
        .form-group input, .form-group select {
            width: 100%;
            padding: 10px 12px;
            border: 1px solid #dee2e6;
            border-radius: 8px;
            font-size: 13px;
            color: #495057;
            transition: all 0.3s;
            background: #f8f9fa;
        }
        
        .form-group input:focus, .form-group select:focus {
            border-color: #0e53ab;
            box-shadow: 0 0 0 3px rgba(14, 83, 171, 0.1);
            outline: none;
        }
        
        .row {
            display: flex;
            flex-wrap: wrap;
            margin-right: -8px;
            margin-left: -8px;
        }
        
        .col-md-6 {
            flex: 0 0 50%;
            max-width: 50%;
            padding-right: 8px;
            padding-left: 8px;
        }
        
        .col-md-12 {
            flex: 0 0 100%;
            max-width: 100%;
            padding-right: 8px;
            padding-left: 8px;
        }
        
        .btn-register {
            background: #0e53ab;
            color: white;
            border: none;
            border-radius: 8px;
            padding: 12px;
            font-size: 15px;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s;
            margin-top: 15px;
            width: 100%;
        }
        
        .btn-register:hover {
            background: #0a3d7a;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(14, 83, 171, 0.2);
        }
        
        .register-footer {
            text-align: center;
            margin-top: 15px;
            color: #6c757d;
            font-size: 13px;
        }
        
        .register-footer a {
            color: #0e53ab;
            text-decoration: none;
            font-weight: 600;
        }
        
        .register-footer a:hover {
            text-decoration: underline;
        }
        
        .alert {
            background: #f8d7da;
            color: #721c24;
            padding: 12px;
            border-radius: 8px;
            margin-bottom: 15px;
            font-size: 13px;
            border: 1px solid #f5c6cb;
        }
        
        @media (max-width: 992px) {
            .register-container {
                flex-direction: column;
                width: 90%;
                height: auto;
            }
            
            .register-image {
                padding: 25px;
            }
            
            .register-form {
                padding: 25px;
            }
            
            .col-md-6 {
                flex: 0 0 100%;
                max-width: 100%;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="register-container">
        <div class="register-image">
            <div class="image-overlay"></div>
            <div class="image-content">
                <h1>Bienvenue</h1>
                <p>Créez votre compte pour accéder à toutes les fonctionnalités</p>
            </div>
            <div class="rotating-svg"></div>
        </div>
        <div class="register-form">
            <h2>Créer un compte</h2>
            <p class="text-muted">Veuillez remplir tous les champs obligatoires</p>

            {{ form_start(registrationForm, {'attr': {'class': 'forms-sample'}}) }}
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(registrationForm.nomUser, 'Nom', {'label_attr': {'class': 'font-weight-medium'}}) }}
                            {{ form_widget(registrationForm.nomUser, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.nomUser) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(registrationForm.prenomUser, 'Prénom', {'label_attr': {'class': 'font-weight-medium'}}) }}
                            {{ form_widget(registrationForm.prenomUser, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.prenomUser) }}
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(registrationForm.dateNaissanceUser, 'Date de naissance', {'label_attr': {'class': 'font-weight-medium'}}) }}
                            {{ form_widget(registrationForm.dateNaissanceUser, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.dateNaissanceUser) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(registrationForm.telephoneUser, 'Téléphone', {'label_attr': {'class': 'font-weight-medium'}}) }}
                            {{ form_widget(registrationForm.telephoneUser, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.telephoneUser) }}
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            {{ form_label(registrationForm.adresseUser, 'Adresse', {'label_attr': {'class': 'font-weight-medium'}}) }}
                            {{ form_widget(registrationForm.adresseUser, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.adresseUser) }}
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(registrationForm.emailUser, 'Email', {'label_attr': {'class': 'font-weight-medium'}}) }}
                            {{ form_widget(registrationForm.emailUser, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.emailUser) }}
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(registrationForm.role, 'Rôle', {'label_attr': {'class': 'font-weight-medium'}}) }}
                            {{ form_widget(registrationForm.role, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.role) }}
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'font-weight-medium'}}) }}
                            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.plainPassword) }}
                        </div>
                    </div>
                </div>
                <br>
                <br>
                {{ form_row(registrationForm.recaptcha) }}
{{ form_errors(registrationForm.recaptcha) }}

</br>
</br>


                <button type="submit" class="btn-register">S'inscrire</button>
            {{ form_end(registrationForm) }}
            

            <div class="register-footer">
                Déjà un compte ? <a href="{{ path('app_login') }}">Connectez-vous</a>
            </div>
        </div>
    </div>
{% endblock %} 