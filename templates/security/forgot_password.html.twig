{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css">
    <style>
        .modern-card {
            background: #fff;
            border-radius: 18px;
            box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.15);
            padding: 2.5rem 2rem 2rem 2rem;
            margin-top: 2rem;
            position: relative;
            overflow: hidden;
        }
        .modern-card .security-icon {
            font-size: 4rem;
            color: #0e53ab;
            margin: 0 auto 1.5rem auto;
            display: block;
            text-align: center;
        }
        .modern-card h3 {
            font-weight: 700;
            color: #0e53ab;
            margin-bottom: 1rem;
        }
        .modern-card .form-control {
            border-radius: 10px;
            border: 1px solid #e0e0e0;
            box-shadow: none;
            font-size: 1.1rem;
        }
        .modern-card .btn-primary {
            background: linear-gradient(90deg, #0e53ab 0%, #3b82f6 100%);
            border: none;
            border-radius: 10px;
            font-weight: 600;
            font-size: 1.1rem;
            transition: background 0.3s, transform 0.2s;
        }
        .modern-card .btn-primary:hover {
            background: linear-gradient(90deg, #3b82f6 0%, #0e53ab 100%);
            transform: translateY(-2px) scale(1.03);
        }
        .modern-card .input-group-text {
            background: #f3f6fa;
            border: none;
            border-radius: 10px 0 0 10px;
        }
        .modern-card .alert {
            border-radius: 10px;
        }
        @media (max-width: 600px) {
            .modern-card {
                padding: 1.5rem 0.5rem 1.5rem 0.5rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container d-flex align-items-center justify-content-center" style="min-height: 100vh;">
        <div class="col-md-6 col-lg-5">
            <div class="modern-card">
                <i class="bi bi-shield-lock-fill security-icon"></i>
                <h3 class="text-center">Mot de passe oublié ?</h3>
                <p class="text-center mb-4 text-muted">Entrez votre adresse email pour recevoir un code de réinitialisation.</p>
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">{{ message }}</div>
                {% endfor %}
                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger">{{ message }}</div>
                {% endfor %}
                <form method="post" autocomplete="off">
                    <div class="input-group mb-3">
                        <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                        <input type="email" id="email" name="email" class="form-control" placeholder="Votre email" required autofocus>
                    </div>
                    <button type="submit" class="btn btn-primary w-100 mt-2">Envoyer le code <i class="bi bi-arrow-right-circle ms-2"></i></button>
                </form>
            </div>
        </div>
    </div>
{% endblock %} 