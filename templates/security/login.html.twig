{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap');
        
        body {
            margin: 0;
            padding: 0;
            font-family: 'Poppins', sans-serif;
            background: #f8f9fa url('/Login/images/backg.png') no-repeat center center fixed;
            background-size: cover;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            box-sizing: border-box;
        }
        
        .login-container {
            display: flex;
            width: 100%;
            max-width: 900px;
            min-height: 600px;
            background: white;
            border-radius: 15px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }
        
        .login-image {
            flex: 1;
            background: linear-gradient(135deg, #0e53ab 0%, #0a3d7a 100%);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 40px;
            position: relative;
            overflow: hidden;
        }
        
        .login-image::before {
            content: '';
            position: absolute;
            width: 200%;
            height: 200%;
            background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" viewBox="0 0 100 100"><rect width="100" height="100" fill="none"/><circle cx="50" cy="50" r="40" stroke="rgba(255,255,255,0.1)" stroke-width="2" fill="none"/></svg>');
            opacity: 0.1;
            animation: rotate 30s linear infinite;
        }
        
        @keyframes rotate {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        
        .login-image h2 {
            color: white;
            font-size: 28px;
            font-weight: 600;
            margin-bottom: 15px;
            text-align: center;
            position: relative;
            z-index: 1;
        }
        
        .login-image p {
            color: rgba(255, 255, 255, 0.8);
            font-size: 16px;
            line-height: 1.6;
            text-align: center;
            position: relative;
            z-index: 1;
        }
        
        .login-form {
            flex: 1;
            padding: 40px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            overflow-y: auto;
        }
        
        .login-form h1 {
            color: #0e53ab;
            font-size: 28px;
            font-weight: 700;
            margin-bottom: 10px;
        }
        
        .login-form p {
            color: #6c757d;
            font-size: 14px;
            margin-bottom: 20px;
        }
        
        .form-group {
            position: relative;
            margin-bottom: 20px;
        }
        
        .form-group input {
            width: 100%;
            padding: 12px 12px 12px 40px;
            border: 1px solid #dee2e6;
            border-radius: 8px;
            font-size: 14px;
            color: #495057;
            transition: all 0.3s;
            background: #f8f9fa;
            box-sizing: border-box;
        }
        
        .form-group input:focus {
            border-color: #0e53ab;
            box-shadow: 0 0 0 3px rgba(14, 83, 171, 0.1);
            outline: none;
        }
        
        .form-group i {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #6c757d;
            font-size: 16px;
        }
        
        .password-toggle {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #6c757d;
            cursor: pointer;
            font-size: 14px;
            font-weight: 500;
        }
        
        .remember-forgot {
            display: flex;
            justify-content: flex-end;
            align-items: center;
            margin-bottom: 20px;
        }
        
        .forgot-password a {
            color: #0e53ab;
            text-decoration: none;
            font-size: 14px;
            font-weight: 500;
        }
        
        .forgot-password a:hover {
            color: #0a3d7a;
            text-decoration: underline;
        }
        
        .btn-login {
            background: #0e53ab;
            color: white;
            border: none;
            border-radius: 8px;
            padding: 12px;
            font-size: 16px;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s;
            margin-bottom: 20px;
            width: 100%;
        }
        
        .btn-login:hover {
            background: #0a3d7a;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(14, 83, 171, 0.2);
        }
        
        .divider {
            display: flex;
            align-items: center;
            text-align: center;
            margin: 15px 0;
        }
        
        .divider::before,
        .divider::after {
            content: "";
            flex: 1;
            border-bottom: 1px solid #dee2e6;
        }
        
        .divider span {
            padding: 0 10px;
            color: #6c757d;
            font-size: 14px;
        }
        
        .auth-options {
            display: flex;
            justify-content: center;
            gap: 15px;
            margin: 15px 0;
        }
        
        .auth-option {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 50px;
            height: 50px;
            border-radius: 50%;
            transition: transform 0.3s, box-shadow 0.3s;
        }
        
        .auth-option:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }
        
        .auth-option img {
            height: 30px;
            width: 30px;
            display: block;
        }
        
        .face-auth {
            background: #0e53ab;
        }
        
        .google-auth {
            background: #ffffff;
            border: 2px solid #0e53ab;
        }
        
        .register-link {
            text-align: center;
            margin-top: 15px;
            color: #6c757d;
            font-size: 14px;
        }
        
        .register-link a {
            color: #0e53ab;
            text-decoration: none;
            font-weight: 600;
        }
        
        .register-link a:hover {
            text-decoration: underline;
        }
        
        .alert {
            background: #f8d7da;
            color: #721c24;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
            font-size: 14px;
            border: 1px solid #f5c6cb;
        }
        
        .alert-success {
            background: #d4edda;
            color: #155724;
            border-color: #c3e6cb;
        }
        
        .alert-danger {
            background: #f8d7da;
            color: #721c24;
            border-color: #f5c6cb;
        }
        
        /* reCAPTCHA styles */
        .captcha-container {
            margin: 20px 0;
            display: flex;
            justify-content: center;
        }
        
        /* Responsive adjustments */
        @media (max-width: 992px) {
            .login-container {
                max-width: 700px;
            }
        }
        
        @media (max-width: 768px) {
            .login-container {
                flex-direction: column;
                max-width: 500px;
            }
            
            .login-image {
                padding: 30px;
                min-height: 150px;
            }
            
            .login-form {
                padding: 30px;
            }
            
            .login-form h1 {
                font-size: 24px;
            }
        }
        
        @media (max-width: 480px) {
            body {
                padding: 10px;
            }
            
            .login-container {
                border-radius: 10px;
            }
            
            .login-image {
                padding: 20px;
                min-height: 120px;
            }
            
            .login-image h2 {
                font-size: 24px;
            }
            
            .login-form {
                padding: 20px;
            }
            
            .login-form h1 {
                font-size: 22px;
                margin-bottom: 5px;
            }
            
            .login-form p {
                font-size: 13px;
                margin-bottom: 15px;
            }
            
            .form-group {
                margin-bottom: 15px;
            }
            
            .form-group input {
                padding: 10px 10px 10px 35px;
                font-size: 13px;
            }
            
            .form-group i {
                font-size: 14px;
            }
            
            .btn-login {
                padding: 10px;
                font-size: 14px;
            }
            
            .auth-option {
                width: 45px;
                height: 45px;
            }
            
            .auth-option img {
                height: 25px;
                width: 25px;
            }
        }
    </style>
{% endblock %}

{% block body %}
<div class="login-container">
    <div class="login-image">
        <h2>Bienvenue</h2>
        <p>NextGenRh</p>
    </div>
    
    <div class="login-form">
        <h1>Connexion</h1>
        <p>Entrez vos identifiants pour accéder à votre compte</p>
        
        {% if error %}
            <div class="alert">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}
        
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <i class="fas fa-envelope"></i>
                <input type="email" name="emailUser" value="{{ last_username }}" required placeholder="Adresse email" autofocus>
            </div>
            
            <div class="form-group">
                <i class="fas fa-lock"></i>
                <input type="password" name="password" class="pass-key" required placeholder="Mot de passe">
                <span class="password-toggle">Afficher</span>
            </div>
            
            <div class="remember-forgot">
                <div class="forgot-password">
                    <a href="{{ path('app_forgot_password') }}">Mot de passe oublié ?</a>
                </div>
            </div>
            
            <!-- reCAPTCHA div avec la clé du fichier .env -->
            <div class="captcha-container">
                <div class="g-recaptcha" data-sitekey="{{ app.request.server.get('GOOGLE_RECAPTCHA_SITE_KEY') }}"></div>
            </div>
            
            <button type="submit" class="btn-login">Se connecter</button>
            
            <div class="divider">
                <span>OU</span>
            </div>
            
            <div class="auth-options">
                <a href="{{ path('app_login_face') }}" class="auth-option face-auth">
                    <img src="/Login/images/OIP.png" alt="Connexion par reconnaissance faciale">
                </a>
                <a href="{{ path('connect_google') }}" class="auth-option google-auth">
                    <img src="{{ asset('Login/images/googleicon.png') }}" alt="Google Icon">
                </a>
            </div>
            
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        </form>
        
        <div class="register-link">
            Pas encore de compte? <a href="{{ path('app_register') }}">S'inscrire</a>
        </div>
    </div>
</div>

<script src="https://www.google.com/recaptcha/api.js" async defer></script>
<script>
    const pass_field = document.querySelector('.pass-key');
    const showBtn = document.querySelector('.password-toggle');
    showBtn.addEventListener('click', function(){
        if(pass_field.type === "password"){
            pass_field.type = "text";
            showBtn.textContent = "Masquer";
            showBtn.style.color = "#0e53ab";
        }else{
            pass_field.type = "password";
            showBtn.textContent = "Afficher";
            showBtn.style.color = "#6c757d";
        }
    });
</script>
{% endblock %}