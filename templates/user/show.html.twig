{% extends 'baseAdmin.html.twig' %}

{% block title %}Détails de l'employé{% endblock %}

{% block body %}
<div class="container-scroller">
    <!-- partial:partials/_navbar.html -->
    {% include 'partials/_navbar.html.twig' %}
    
    <div class="container-fluid page-body-wrapper">
        <!-- partial:partials/_sidebar.html -->
        {% include 'partials/_sidebarAdmin.html.twig' %}
        
        <!-- partial -->
        <div class="main-panel">
            <div class="content-wrapper">
                <div class="row">
                    <div class="col-lg-12 grid-margin stretch-card">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Détails de l'employé</h4>
                                
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Nom</label>
                                            <p class="form-control-static">{{ user.nomUser }}</p>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Prénom</label>
                                            <p class="form-control-static">{{ user.prenomUser }}</p>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Email</label>
                                            <p class="form-control-static">{{ user.emailUser }}</p>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Téléphone</label>
                                            <p class="form-control-static">{{ user.telephoneUser }}</p>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Date de naissance</label>
                                            <p class="form-control-static">{{ user.dateNaissanceUser ? user.dateNaissanceUser|date('d/m/Y') : '' }}</p>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Adresse</label>
                                            <p class="form-control-static">{{ user.adresseUser }}</p>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Rôle</label>
                                            <p class="form-control-static">{{ user.role }}</p>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Statut</label>
                                            <p class="form-control-static">
                                                {% if user.isActive %}
                                                    <span class="badge badge-success">Actif</span>
                                                {% else %}
                                                    <span class="badge badge-danger">Inactif</span>
                                                {% endif %}
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="row mt-4">
                                    <div class="col-md-12">
                                        <a href="{{ path('app_user_index') }}" class="btn btn-secondary">Retour à la liste</a>
                                        <a href="{{ path('app_user_edit', {'id': user.idUser}) }}" class="btn btn-primary">Modifier</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
            
            <!-- partial:partials/_footer.html -->
            {% include 'partials/_footer.html.twig' %}
            <!-- partial -->
        </div>
        <!-- main-panel ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>
<!-- container-scroller ends -->
{% endblock %}