{% extends 'base1.html.twig' %}

{% block title %}Modifier une demande de télétravail{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">

            {% for message in app.flashes('success') %}
                <div class="alert alert-success">{{ message }}</div>
            {% endfor %}
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger">{{ message }}</div>
            {% endfor %}

            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h1 class="h4 mb-0">Modifier la demande de télétravail</h1>
                </div>

                <div class="card-body">
                    {{ form_start(form, {'attr': {'data-turbo': 'false', 'novalidate': 'novalidate'}}) }}
                    <div class="mb-3">
                        {{ form_label(form.DateDemandeTT, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.DateDemandeTT, {'attr': {'class': 'form-control', 'readonly': 'readonly'}}) }}
                        <small class="form-text text-muted">Date de création de la demande</small>
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.DateDebutTT, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.DateDebutTT, {'attr': {'class': 'form-control' ~ (form.DateDebutTT.vars.errors|length ? ' is-invalid' : '')}}) }}
                        <div class="invalid-feedback">{{ form_errors(form.DateDebutTT) }}</div>
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.DateFinTT, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.DateFinTT, {'attr': {'class': 'form-control' ~ (form.DateFinTT.vars.errors|length ? ' is-invalid' : '')}}) }}
                        <div class="invalid-feedback">{{ form_errors(form.DateFinTT) }}</div>
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.RaisonTT, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.RaisonTT, {'attr': {'class': 'form-control', 'rows': 3}}) }}
                        <div class="invalid-feedback">{{ form_errors(form.RaisonTT) }}</div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <button type="submit" class="btn btn-success px-4">
                            <i class="fas fa-edit me-2"></i> Mettre à jour
                        </button>
                        <a href="{{ path('app_teletravail_index') }}" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i> Retour à la liste
                        </a>
                    </div>
                    {{ form_end(form) }}

                    <hr class="my-4" />

                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
