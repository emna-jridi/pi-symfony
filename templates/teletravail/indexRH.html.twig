{% extends 'base1.html.twig' %}

{% block title %}Gestion des demandes de télétravail (RH){% endblock %}

{% block body %}
<div class="col-lg-12 grid-margin stretch-card">
  <div class="card">
    <div class="card-body">
      <h1 class="card-title">Liste des demandes de télétravail</h1>

      <!-- Formulaire de recherche et filtres -->
      <form method="get" class="mb-3 row g-3">
        <div class="col-md-3">
          <input type="text" name="search" class="form-control" placeholder="Rechercher par raison..." value="{{ search }}">
        </div>
        <div class="col-md-2">
          <select name="statut" class="form-control">
            <option value="">-- Statut --</option>
            <option value="Traitement" {{ statut == 'Traitement' ? 'selected' : '' }}>Traitement</option>
            <option value="Accepté" {{ statut == 'Accepté' ? 'selected' : '' }}>Accepté</option>
            <option value="Refusé" {{ statut == 'Refusé' ? 'selected' : '' }}>Refusé</option>
          </select>
        </div>
        <div class="col-md-2">
          <button type="submit" class="btn btn-primary w-100">Filtrer</button>
        </div>
        <div class="col-md-1">
          <a href="{{ path('rh_teletravail_index') }}" class="btn btn-secondary w-100">Reset</a>
        </div>
      </form>

      <!-- Tableau -->
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>
                <a href="{{ path('rh_teletravail_index', {search: search|default(''), statut: statut|default(''), sort: 'DateDemandeTT', order: sort == 'DateDemandeTT' and order == 'ASC' ? 'DESC' : 'ASC'}) }}">
                  Date de demande {{ sort == 'DateDemandeTT' ? (order == 'ASC' ? '↑' : '↓') : '' }}
                </a>
              </th>
              <th>
                <a href="{{ path('rh_teletravail_index', {search: search|default(''), statut: statut|default(''), sort: 'DateDebutTT', order: sort == 'DateDebutTT' and order == 'ASC' ? 'DESC' : 'ASC'}) }}">
                  Date début {{ sort == 'DateDebutTT' ? (order == 'ASC' ? '↑' : '↓') : '' }}
                </a>
              </th>
              <th>
                <a href="{{ path('rh_teletravail_index', {search: search|default(''), statut: statut|default(''), sort: 'DateFinTT', order: sort == 'DateFinTT' and order == 'ASC' ? 'DESC' : 'ASC'}) }}">
                  Date fin {{ sort == 'DateFinTT' ? (order == 'ASC' ? '↑' : '↓') : '' }}
                </a>
              </th>
              <th>Statut</th>
              <th>Raison</th>
              <th>Actions RH</th>
            </tr>
          </thead>
          <tbody>
            {% for teletravail in teletravails %}
              <tr>
                <td>{{ teletravail.DateDemandeTT ? teletravail.DateDemandeTT|date('Y-m-d') : '' }}</td>
                <td>{{ teletravail.DateDebutTT ? teletravail.DateDebutTT|date('Y-m-d') : '' }}</td>
                <td>{{ teletravail.DateFinTT ? teletravail.DateFinTT|date('Y-m-d') : '' }}</td>
                <td>
                  {% if teletravail.StatutTT == 'Accepté' %}
                    <span class="badge badge-success">{{ teletravail.StatutTT }}</span>
                  {% elseif teletravail.StatutTT == 'Refusé' %}
                    <span class="badge badge-danger">{{ teletravail.StatutTT }}</span>
                  {% else %}
                    <span class="badge badge-warning">{{ teletravail.StatutTT }}</span>
                  {% endif %}
                </td>
                <td>{{ teletravail.RaisonTT }}</td>
                <td>
                  {% if teletravail.StatutTT == 'Traitement' %}
                    <form method="post" action="{{ path('rh_teletravail_traiter', {'id': teletravail.IdTeletravail}) }}" style="display:inline-block;">
                      <input type="hidden" name="statut" value="Accepté">
                      <button class="btn btn-success btn-sm" onclick="return confirm('Accepter cette demande ?')">Accepter</button>
                    </form>
                    <form method="post" action="{{ path('rh_teletravail_traiter', {'id': teletravail.IdTeletravail}) }}" style="display:inline-block;">
                      <input type="hidden" name="statut" value="Refusé">
                      <button class="btn btn-danger btn-sm" onclick="return confirm('Refuser cette demande ?')">Refuser</button>
                    </form>
                  {% else %}
                    <span class="text-muted">Déjà traité</span>
                  {% endif %}
                </td>
              </tr>
            {% else %}
              <tr>
                <td colspan="6" class="text-center">Aucune demande trouvée.</td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
{% endblock %}
