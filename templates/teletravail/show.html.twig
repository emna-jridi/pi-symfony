{% block title %}Teletravail{% endblock %}

{% block body %}
    <h1>Teletravail</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>IdTeletravail</th>
                <td>{{ teletravail.IdTeletravail }}</td>
            </tr>
            <tr>
                <th>Nom Employe</th>
                <td>{{ teletravail.Employe.nomUser }}</td>
